function! SwitchToOrFromHeader() " {{{2
  if expand('%:t:e') == 'cpp'
    exec "normal :e ./**/". expand('%:t:r') . ".h*\<TAB>\<CR>"
  elseif expand('%:t:e') == 'h' || expand('%:t:e') == 'hpp'
    exec "normal :e ./**/". expand('%:t:r') . ".cpp\<TAB>\<CR>"
  endif
endfunction
