function! ToggleFullscreen() " {{{3
  if matchstr(&guioptions,"m")!=""
    set guioptions -=b
    set guioptions -=m
    set guioptions -=r
    set guioptions -=L
    return "Fullscreen On"
  else
    set guioptions +=b
    set guioptions +=m
    set guioptions +=r
    set guioptions +=L
    return "Fullscreen Off"
  endif
endfunction
noremap <F11>    :echo ToggleFullscreen()<CR>
" }}}3
